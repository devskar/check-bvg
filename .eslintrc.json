{
  "root": true,
  "env": {
      "es2021": true,
      "node": true
  },
  "settings": {
      "import/resolver": {
          "node": {
              "extensions": [
                  ".js",
                  ".ts"
              ]
          },
          "json": {
              "extensions": [
                  ".json"
              ]
          }
      }
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "prettier/prettier": "error"
  },
  "ignorePatterns": ["src/**/*.test.ts"]
}